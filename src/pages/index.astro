---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
import IntroFrame from "../components/IntroFrame.astro";
import PaleFrame from "../components/MyWorkFrame.astro";
import CircleFrame from "../components/CircleFrame.astro";
---

<BaseLayout title="Home">
  <div class="flex flex-col 2xl:flex-row h-full">
    <IntroFrame />
    <div class="flex flex-col w-full h-full gap-16 2xl:gap-0 pb-20 2xl:pb-0">
      <div class="w-full h-full">
        <PaleFrame />
      </div>
      <div class="w-full h-full">
        <CircleFrame />
      </div>
    </div>
  </div>
</BaseLayout>
